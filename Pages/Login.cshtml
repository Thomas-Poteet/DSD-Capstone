@page
<!DOCTYPE html>
<html>
<head>
    <style>
        body {
            background-color: #007bff; /* Blue background */
            color: white; /* White text color for contrast */
        }
        .title-image {
            max-width: 100%; /* Make sure image is responsive */
            height: auto; /* Maintain aspect ratio */
        }
    </style>
</head>
<body>
<div class="container-fluid">
    <div class="row justify-content-center align-items-center vh-100">  
        <div class="container">
                <!-- Title Image -->
                <div class="col-12 mb-8 text-center">
                    <img src="~/images/Scenic Foods Banner.PNG" class="title-image" alt="DSD Logo">
                </div>
                <!-- Login Card -->
            <div id="divLogin" class="card col-12 text-black">
                <div class="card-header">
                    <h3 class="col-12 text-center">DSD System</h3>
                </div>
                <div class="card-body">
                    <form>
                        <label for="txtLoginUsername" class="form-label mb-0">Username</label>
                        <input id="txtLoginUsername" type="email" class="form-control" placeholder="Username" aria-label="Username" required>
                        <label for="txtLoginPassword" class="form-label mb-0">Password</label>
                        <input id="txtLoginPassword" type="password" class="form-control" placeholder="Password" aria-label="Password" required>

                        <button id="btnLogin" type="button" class="btn btn-secondary col-12 mt-2">Login</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

    @section Scripts {
        <script>
            // Login button click event
            $("#btnLogin").click(function () {
                // Get the username and password
                var username = $("#txtLoginUsername").val();
                var password = $("#txtLoginPassword").val();

                // Check if the username and password are correct
                if (username == "admin" && password == "admin") {
                    // Redirect to the home page
                    window.location.href = "/Index";
                } else {
                    // Show an error message
                    alert("Invalid username or password.");
                }
            });
        </script>
    }
</body>
</html>

@page
<!DOCTYPE html>
<html>
<head>
    <style>
        body {
            background-color: #73a8ee; /* Blue background */
            color: white; /* White text color for contrast */
        }
        .title-image {
            max-width: 100%; /* Make sure image is responsive */
            height: auto; /* Maintain aspect ratio */
        }
    </style>
</head>
<body>
<div class="container-fluid vh-100 d-flex flex-column justify-content-center">
    <!-- Title Image -->
    <div class="row justify-content-center mb-5">
        <div class="col-lg-6 col-md-8 col-sm-10 text-center">
            <img src="~/images/Scenic Foods Banner.PNG" class="title-image" alt="DSD Logo">
        </div>
    </div>
    <!-- Login Card -->
    <div class="row justify-content-center">
        <div class="col-lg-4 col-md-6 col-sm-8">
            <div id="divLogin" class="card text-black">
                <div class="card-header text-center">
                    <h3>DSD System</h3>
                </div>
                <div class="card-body">
                    <form>
                        <label for="txtLoginUsername" class="form-label">Username</label>
                        <input id="txtLoginUsername" type="email" class="form-control" placeholder="Username" required>
                            
                        <label for="txtLoginPassword" class="form-label">Password</label>
                        <input id="txtLoginPassword" type="password" class="form-control" placeholder="Password" required>

                        <button id="btnLogin" type="button" class="btn btn-secondary col-12 mt-3">Login</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

    @section Scripts {
        <script>
            // Login button click event
            $("#btnLogin").click(function () {
                // Get the username and password
                var username = $("#txtLoginUsername").val();
                var password = $("#txtLoginPassword").val();

                // Check if the username and password are correct
                if (username == "admin" && password == "admin") {
                    // Redirect to the home page
                    window.location.href = "/Index";
                } else {
                    // Show an error message
                    alert("Invalid username or password.");
                }
            });
        </script>
    }
</body>
</html>
